<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Kurir_Main_MAIN">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/atas"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/foto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:background="@color/white" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Nama : "
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nama"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:text="Status : "
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/check"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignTop="@+id/status"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/status" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mulai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/atas"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/kerja"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mulai Mengantarkan Kebaikan"
                    android:textColor="@color/white" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/buka_maps"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/mulai"
                android:layout_margin="10dp"
                android:background="@color/green"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_buka_maps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/icon_maps"
                    android:background="@color/green"
                    android:text="Buka Maps"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/icon_maps"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_map_black_24dp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>